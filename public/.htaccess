# Apache configuration for SPA
RewriteEngine On
RewriteBase /

# Handle Angular/React Router Routes
RewriteRule ^index\.html$ - [L]
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule . /index.html [L]

